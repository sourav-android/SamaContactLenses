<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#8f8b8a" />
        </shape>
    </item>

    <item android:top="-3dp" android:right="-3dp" android:left="-3dp" android:bottom="0sp">
        <shape>
            <solid android:color="#8f8b8a" />
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimaryDark" />
        </shape>
    </item>

</layer-list>