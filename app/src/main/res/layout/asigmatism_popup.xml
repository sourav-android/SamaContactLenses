<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10sp">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_medium"
                    android:text="@string/withAsig"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pop_close" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_medium"
                    android:text="@string/lefteye"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_medium"
                            android:text="@string/sph"
                            android:textAllCaps="true"
                            android:textColor="@color/txtColorLabel"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/shp_spin"
                                android:layout_width="match_parent"
                                android:layout_height="45sp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_drop"
                                android:entries="@array/listArray"
                                android:paddingStart="10dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/cairo_medium"
                            android:text="@string/cyl"
                            android:textAllCaps="true"
                            android:textColor="@color/txtColorLabel"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/cyl_spin"
                                android:layout_width="match_parent"
                                android:layout_height="45sp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_drop"
                                android:entries="@array/listArray"
                                android:paddingStart="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_medium"
                            android:text="@string/ax"
                            android:textAllCaps="true"
                            android:textColor="@color/txtColorLabel"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/ax_spin"
                                android:layout_width="match_parent"
                                android:layout_height="45sp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_drop"
                                android:entries="@array/listArray"
                                android:paddingStart="10dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/cairo_medium"
                            android:text="@string/base"
                            android:textAllCaps="true"
                            android:textColor="@color/txtColorLabel"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/b_c_spin"
                                android:layout_width="match_parent"
                                android:layout_height="45sp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_drop"
                                android:entries="@array/listArray"
                                android:paddingStart="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_medium"
                    android:text="@string/righteye"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_medium"
                            android:text="@string/sph"
                            android:textAllCaps="true"
                            android:textColor="@color/txtColorLabel"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/r_shp_spin"
                                android:layout_width="match_parent"
                                android:layout_height="45sp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_drop"
                                android:entries="@array/listArray"
                                android:paddingStart="10dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/cairo_medium"
                            android:text="@string/cyl"
                            android:textAllCaps="true"
                            android:textColor="@color/txtColorLabel"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/r_cyl_spin"
                                android:layout_width="match_parent"
                                android:layout_height="45sp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_drop"
                                android:entries="@array/listArray"
                                android:paddingStart="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_medium"
                            android:text="@string/ax"
                            android:textAllCaps="true"
                            android:textColor="@color/txtColorLabel"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/r_ax_spin"
                                android:layout_width="match_parent"
                                android:layout_height="45sp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_drop"
                                android:entries="@array/listArray"
                                android:paddingStart="10dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/cairo_medium"
                            android:text="@string/base"
                            android:textAllCaps="true"
                            android:textColor="@color/txtColorLabel"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/r_b_c_spin"
                                android:layout_width="match_parent"
                                android:layout_height="45sp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_drop"
                                android:entries="@array/listArray"
                                android:paddingStart="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15sp"
                    android:background="@drawable/edit_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/astigmetism_chk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_regular"
                        android:text=""
                        android:textColor="@color/txtColorLabel"
                         />
                    <TextView
                        android:id="@+id/aggree"
                        android:textColor="@color/txtColorLabel"
                        android:layout_marginBottom="10sp"
                        android:lineHeight="22sp"
                        android:textSize="15dp"
                        android:fontFamily="@font/cairo_regular"
                        android:layout_weight="1"
                        android:text="Its customized order! The delivery will take 45 days or more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/pink_grad_button"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>