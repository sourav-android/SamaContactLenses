<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:padding="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/cairo_medium"
            android:text="@string/WithP"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pop_close" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/doubleLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_medium"
                    android:text="@string/lefteye"
                    android:textAllCaps="true"
                    android:textColor="@color/txtColorLabel"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/left_power_spin"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_drop"
                        android:entries="@array/listArray"
                        android:paddingStart="10dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_medium"
                    android:text="@string/righteye"
                    android:textAllCaps="true"
                    android:textColor="@color/txtColorLabel"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/right_power_spin"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_drop"
                        android:entries="@array/listArray"
                        android:paddingStart="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/pink_grad_button"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>