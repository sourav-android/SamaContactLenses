                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <Button
                        android:id="@+id/shi_type_manual_btn"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/pink_grad_button"
                        android:fontFamily="@font/cairo_regular"
                        android:text="@string/add_new_address"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/is_same_chk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:checked="true"
                    android:fontFamily="@font/cairo_regular"
                    android:text="@string/billing_address_is_same_as_shipping_address"
                    android:textColor="@color/txtColorLabel"
                    android:textSize="14dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/biling_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38sp"
                    android:layout_marginTop="10sp"
                    android:background="#8f8b8a"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rect_grey"
                        android:fontFamily="@font/cairo_medium"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingStart="10sp"
                        android:text="@string/billing_info"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/billing_manual_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
